<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.working.activity.PurchaseDetailActivity" />
        <variable
            name="title"
            type="String" />

        <import type="android.text.Html"/>

        <variable
            name="account"
            type="Float" />

        <variable
            name="approval"
            type="Integer" />

        <variable
            name="commit"
            type="Boolean" />

            <import type="android.view.View"
                alias="view"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@{title}"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:onClick="@{()->activity.onBack()}"
            android:rotation="180"
            android:src="@mipmap/icon_in"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/status_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/recycler_view"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:elevation="5dp"
            android:gravity="center"
            android:layout_marginBottom="34dp"
            android:visibility='@{commit?view.GONE:view.VISIBLE, default="gone"}'
            android:onClick="@{()->activity.onAddViewClicked()}"
            android:orientation="horizontal"
            android:text="添加用品"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/add_btn_icon"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button" />

            <TextView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="添加记录"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divder_line_color"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility='@{approval==2 ?view.GONE:view.VISIBLE}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text='@{Html.fromHtml("&lt;font color=\"#333333\">合计: &lt;/font> &lt;font color=\"#FE4646\">￥" + account + "&lt;/font>"), default="合计：￥43.7"}'
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/organg_bg"
                android:gravity="center"
                android:onClick="@{()->activity.submitData(false)}"
                android:text="提交上报"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_bg"
                android:gravity="center"
                android:onClick="@{()->activity.submitData(true)}"
                android:text="保存草稿"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_below="@+id/psd"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:onClick="@{()->activity.submitData(true)}"
            android:text="生成购买订单"
            android:textSize="18sp"
            android:visibility='@{approval!=2?view.GONE:view.VISIBLE,default="gone"}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>