<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"
            alias="view"/>

        <variable
            name="isCommit"
            type="Boolean" />

        <variable
            name="data"
            type="com.working.domain.RepInInfoData.DataBean.InStockItemListBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="@{data.materialName}"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"规格：" + data.unit, default="ddddddddddd"}'
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价："
            android:layout_marginTop="42dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/gray"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/counterView"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginRight="20dp"
            android:text="@{`x`+ data.productQuantity, default=`x0.0`}"
            android:visibility="@{isCommit?view.VISIBLE:view.GONE, default=`visible`}"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/input_et_bg"
            android:focusable="false"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text='@{"￥:" + data.price}'
            android:textColor="@color/gray"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.working.view.CounterView
            android:id="@+id/counterView"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:visibility="@{isCommit?view.GONE:view.VISIBLE, default=`gone`}"
            app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>